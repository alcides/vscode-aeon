{
    "name": "aeon",
    "displayName": "Aeon",
    "description": "Aeon language support for VS Code",
    "version": "0.0.1",
    "publisher": "Alcides Fonseca et al.",
    "engines": {
        "vscode": "^1.75.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "keywords": [
        "Aeon"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/alcides/vscode-aeon.git"
    },
    "homepage": "https://github.com/alcides/aeon",
    "activationEvents": [],
    "main": "./out/extension.js",
    "contributes": {
        "configuration": {
            "type": "object",
            "title": "Aeon",
            "properties": {
                "aeon.elaborationDelay": {
                    "type": "number",
                    "default": 200,
                    "description": "Time (in milliseconds) which must pass since latest edit until elaboration begins. Lower values may make editing feel faster at the cost of higher CPU usage."
                }
            }
        },
        "commands": [
            {
                "command": "aeon.helloWorld",
                "title": "Hello World"
            }
        ],
        "languages": [
            {
                "id": "aeon",
                "configuration": "./language-configuration.json",
                "extensions": [
                    ".ae"
                ]
            }
        ],
        "grammars": [
            {
                "language": "aeon",
                "scopeName": "source.aeon",
                "path": "./syntaxes/aeon.json"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "lint": "eslint",
        "watch": "tsc -watch -p ./",
        "package": "vsce package",
        "packagePreRelease": "vsce package --pre-release"
    },
    "devDependencies": {
        "@eslint/js": "^9.13.0",
        "@stylistic/eslint-plugin": "^2.9.0",
        "@types/node": "^22",
        "@types/vscode": "^1.73.0",
        "eslint": "^9.13.0",
        "typescript": "^5.7.2",
        "typescript-eslint": "^8.16.0",
        "@vscode/vsce": "^2.21.1",
        "ovsx": "^0.9.1"
    },
    "icon": "images/lean_logo.png",
    "dependencies": {
        "yarn": "^1.22.22"
    }
}
